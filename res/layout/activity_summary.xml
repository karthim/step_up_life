<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hcc.stepuplife.SummaryActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/summaryText"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Summary for Today" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="197dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/oak_tree_1" />

        <TableLayout
            android:id="@+id/summaryTable"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/summaryTableHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/statsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="6"
                    android:gravity="center"
                    android:text="Stats"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:typeface="serif" >
                </TextView>
            </TableRow>

            <TableRow
                android:id="@+id/caloriesRow"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/caloriesText"
                    android:text="Calories Burnt" >
                </TextView>

                <TextView
                    android:id="@+id/calories"
                    android:text="0"
                    android:textStyle="bold"
                    android:typeface="serif" >
                </TextView>
            </TableRow>

            <TableRow
                android:id="@+id/pushupsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/pushupsText"
                    android:text="Pushups" >
                </TextView>

                <TextView
                    android:id="@+id/pushups"
                    android:text="0"
                    android:textStyle="bold"
                    android:typeface="serif" >
                </TextView>
            </TableRow>

            <TableRow
                android:id="@+id/lungesRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/lungesText"
                    android:text="lunges" >
                </TextView>

                <TextView
                    android:id="@+id/lunges"
                    android:text="0"
                    android:textStyle="bold"
                    android:typeface="serif" >
                </TextView>
            </TableRow>

            <TableRow
                android:id="@+id/cancelRowRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/cancelRowText"
                    android:text="Times cancelled" >
                </TextView>

                <TextView
                    android:id="@+id/cancel"
                    android:text="0"
                    android:textStyle="bold"
                    android:typeface="serif" >
                </TextView>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/buttonClose"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/gray"
            android:text="Close " />
    </LinearLayout>

</FrameLayout>