<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hcc.stepuplife"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hcc.stepuplife.Home"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hcc.stepuplife.Accelerometer"
            android:label="@string/title_activity_accelerometer" >
        </activity>
        <activity
            android:name="hcc.stepuplife.LoginActivity"
            android:label="@string/title_activity_login" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="hcc.stepuplife.CreateProfileActivity"
            android:label="@string/title_activity_create_profile" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="hcc.stepuplife.NotificationActivity"
            android:label="@string/title_activity_reminder" android:screenOrientation="portrait">
        </activity>

        <service android:name=".StepUpLifeIntentService" >
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service
            android:name="hcc.stepuplife.StepUpLifeService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>